{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2020"],
    "module": "CommonJS",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@/*": ["./*"],
      "shared/*": ["../../shared-types/*"]
    }
  },
  "include": ["src", "test", "../shared-types/"],
  "exclude": ["node_modules", "dist", "coverage"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
